<script>
  window.onload = function() { filterSelection('all'); };
  function filterSelection(category) {
    var x = document.getElementsByClassName("gallery")[0].getElementsByTagName("img");
    if(category=="all") category="";
    for(var i=0;i<x.length;i++){
      x[i].style.display = x[i].className.indexOf(category) > -1 ? "block" : "none";
    }
    var btns = document.getElementsByClassName("filter-buttons")[0].getElementsByTagName("button");
    for(var i=0;i<btns.length;i++){ btns[i].className = btns[i].className.replace(" active",""); }
    event.target && (event.target.className += " active");
  }
</script>

